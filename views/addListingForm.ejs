<%- include('partials/header', { fullName: fullName }) %>

    <div class="addLisitng">
        <form action="/auth/submitProperty" method="POST" enctype="multipart/form-data">
            <div class="form-item">
                <label for="propertyType">Property Type:</label>
                <select id="propertyType" name="propertyType">
                    <option value="house">House</option>
                    <option value="apartment">Apartment</option>
                    <option value="condo">Condo</option>
                </select>
            </div>
            
            <div class="form-item">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" required>
            </div>

            <div class="form-item">
                <label for="city">City:</label>
                <input type="text" id="city" name="city" required>
            </div>

            <div class="form-item">
                <label for="state">State:</label>
                <input type="text" id="state" name="state" required>
            </div>

            <div class="form-item">
                <label for="price">Price:</label>
                <input type="text" id="price" name="price" required>
            </div>
            
            <div class="form-item">
                <label for="photos">Photos:</label>
                <input type="file" id="photos" name="photos" multiple>
            </div>

            <div class="form-item">
                <label for="description">Description:</label>
                <textarea name="description" id="description" cols="30" rows="10"></textarea>
            </div>
            <div class="form-item">
                <label for="numberOfBedrooms">Number Of Bedrooms:</label>
                <input type="number" name="numberOfBedrooms" id="numberOfBedrooms">
            </div>
            <div class="form-item">
                <label for="numberOfBathrooms">Number Of Bathrooms:</label>
                <input type="number" name="numberOfBathrooms" id="numberOfBathrooms">
            </div>

            <h3>Contact Info</h3>

            <div class="form-item">
                <label for="contactName">Contact Name:</label>
                <input type="text" name="contactNam" id="contactNam" required>
            </div>

            <div class="form-item">
                <label for="contactEmail">Contact Email:</label>
                <input type="text" name="contactEmail" id="contactEmail" required>
            </div>

            <div class="form-item">
                <label for="contactPhoneNumber">Contact Number:</label>
                <input type="number" name="contactPhoneNumber" id="contactPhoneNumber" required>
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>

<%- include('partials/footer') -%>